<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="10sp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtContent" android:hint="내용입력"
            android:layout_width="0px" android:layout_height="wrap_content" android:layout_weight="4"/>
        <Button
            android:id="@+id/btnAdd" android:text="입력"
            android:layout_width="0px" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>